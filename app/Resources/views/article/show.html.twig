{% extends 'base.html.twig' %}

{% block body %}
    <h1>Article</h1>

    <table>
        <tbody>
            <tr>
                <th>Date de création</th>
                <td>{% if element.datecreate %}{{ element.datecreate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de l'évènement</th>
                <td>{% if article.dateevent %}{{ article.dateevent|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Phrase d'acroche</th>
                <td>{{ article.catchsentence }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.picture }}</td>
            </tr>
            <tr>
                <th>Contenue</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>email du créateur</th>
                <td>{{ email }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if article.enabled %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        {% if ((id_user == id_user_article ) and (article.enabled == 0)) or (admin) %}
        <li>
            <a href="{{ path('article_edit', { 'id': article.id }) }}">Edit</a>
        </li>

        {% endif %}
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
