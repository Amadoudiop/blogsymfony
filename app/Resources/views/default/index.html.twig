{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid size-slider">
        <div id="carouselExampleIndicators" class="carousel slide shadow-box" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              {% for slide in slides %}
                  {% if slide.active == 1 %}
                    <div class="carousel-item active">
                        <img class="d-block w-100 imgCarousel" src="{{ asset(upload_directory_slide ~ slide.picture) }}" alt="First slide">
                    </div>
                  {% endif %}
              {% endfor %}
                <div class="carousel-item">
                    <img class="d-block w-100 imgCarousel" src="{{ asset(upload_directory_slide ~ '2cefcc04db7c15b300c1844bee08bfd1.jpeg') }}" alt="First slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <i class="fas fa-angle-left arrow-slider" aria-hidden="true"></i>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <i class="fas fa-angle-right arrow-slider" aria-hidden="true"></i>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    {% include 'icon.html.twig' %}
    {% for article in articles %}
        {% include 'event.html.twig' %}
    {% endfor %}

{% endblock %}

