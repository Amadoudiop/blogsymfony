{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid size-slider">
        <div id="carouselExampleIndicators" class="carousel slide shadow-box" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 imgCarousel" src="{{ asset('image/rouge(2).png') }}" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 imgCarousel" src="{{ asset('image/bleu.png') }}" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 imgCarousel" src="{{ asset('image/vert(2).png') }}" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <i class="fas fa-angle-left arrow-slider" aria-hidden="true"></i>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <i class="fas fa-angle-right arrow-slider" aria-hidden="true"></i>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    {% include 'icon.html.twig' %}
    {% include 'article.html.twig' %}
    {% include 'event.html.twig' %}
    {% include 'article.html.twig' %}
    {% include 'article.html.twig' %}
{% endblock %}

