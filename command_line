// comande à faire quand on recharge le projet
composer install
php bin/console d:s:u --dump-sql
php bin/console d:s:u -f

// commande de générer get et set entité

php bin/console d:g:entities "AppBundle:User"

(--no-backup pour ne pas générer de bckd:f:c )

//entity
php bin/console doctrine:generate:entity \ --entity="AppBundle:Slide" \ --fields="active:boolean pfalse title:string(50) content:string(125) url:string(255)"

// CRUD (créer des views un controller et un form a partir d'une entity )
php bin/console generate:doctrine:crud AppBundle:Slide -n --format=annotation --with-write

// controller
php bin/console generate:controller


//form type (relié à une entité)
php bin/console generate:doctrine:form AcmeBlogBundle:Post



// MAJ SQL
php bin/console d:s:u --dump-sql
php bin/console d:s:u -f

//GIT
git status
git add .
git status
git commit -m "commentaire"
git push origin "branche"
git status

// récupe un projet
git pull origin "branche"

// Change de branche
git checkout dev

// Promouvoir un utilisateur
$ php bin/console fos:user:promote "utilisateur" ROLE_"Status"


// DoctrineFixturesBundle
lien bundle : https://symfony.com/doc/current/bundles/DoctrineFixturesBundle/index.html
loading fixtures : $ php bin/console doctrine:fixtures:load

// FOSJsRoutingBundle
lien bundle : https://symfony.com/doc/master/bundles/FOSJsRoutingBundle/installation.html
composer require friendsofsymfony/jsrouting-bundle
php bin/console assets:install --symlink web

